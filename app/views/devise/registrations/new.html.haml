
.Home
  .home
    .contents
      .container
        %h3 新規アカウントの作成
        = render "devise/shared/links"
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = devise_error_messages!
          .FormField
            .FormField__label--normal
              = f.label :name, "名前(最大8文字)"
            .FormField__input--form
              = f.text_field :name, autofocus: true, maxlength: "8", class: "text_area"
            .FormField__label--normal
              = f.label :email, "E-mail"
            .FormField__input--form
              = f.email_field :email, class: "text_area"
            .FormField__label--normal
              = f.label :password, "パスワード(8文字以上)"
            .FormField__input--form
              = f.password_field :password, autocomplete: "off", class: "text_area"
            .FormField__label--normal
              = f.label :password_confirmation, "パスワード再入力"
            .FormField__input--form
              = f.password_field :password_confirmation, autocomplete: "off", class: "text_area"
            .actions
              = f.submit "アカウント作成", class: 'submit'

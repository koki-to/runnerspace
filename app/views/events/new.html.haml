.Home
  .Home__top.img1
  .Home__top.img2
  .Home__top.img3
  .Home__top.img4
  .Home__top__body
    .Input
      = form_with(model: @event, local: true) do |f|
        - if @event.errors.any?
          %h2= "#{@event.errors.full_messages.count}件のエラーが発生しました"
          %ul
            - @event.errors.full_messages.each do |message|
              %li= message
        .Input__area
          .Input__area__left
            .Input__area__left__normal
              = f.label :name, "タイトル(10字以内)"
            .Input__area__left__title
              = f.text_field :name, maxlength: "10"
            = f.collection_check_boxes :user_ids, User.all, :id, :name
            .Input__area__left__normal
              = f.label :address, "場所"
            .Input__area__left__title
              = f.text_field :address
            .Input__area__left__normal
              = f.label :run, "走行距離(予定)"
            .Input__area__left__run
              = f.number_field :run, step: '0,1', placeholder: "1", min: "0", max: "100"
              %span km
            .Input__area__left__normal
              = f.label :image, "画像"
            .Input__area__left__image
              = f.file_field :image
          .Input__area__right
            .Input__area__right__normal
              = f.label :content, "内容(200字以内)"
            .Input__area__right__text
              = f.text_area :content, rows: "6", maxlength: "200", size: "30x10"
        .Input__button
          = f.submit "作成・編集する", class: 'submit'

- if current_user != @user
  - if @user.followed_by?(current_user)
    = link_to user_relationships_path(@user.id), method: :delete, class: "star_btn", remote: true do
      = icon 'fas', "star", class: "star"
  - else
    = link_to user_relationships_path(@user.id), method: :post, class: "star_btn", remote: true do
      = icon 'far', "star", class: "unster"
= form_with(model: @tweet, local: true) do |f|
  - if @tweet.errors.any?
    %h2= "#{@tweet.errors.full_messages.count}件のエラーが発生しました"
    %ul
      - @tweet.errors.full_messages.each do |message|
        %li= message
  .Input__area
    .Input__area__left
      .Input__area__left__normal
        = f.label :title, "タイトル(10字以内)"
      .Input__area__left__title
        = f.text_field :title, maxlength: "10"
      .Input__area__left__normal
        = f.label :title, "タグ"
      .Input__area__left__tag
        = f.select :tag_ids, [["走行距離", 1], ["運動グッズ", 2], ["大会記録", 3], ["その他", 4]]
      .Input__area__left__normal
        = f.label :run, "走行距離"
      .Input__area__left__run
        = f.number_field :run, step: '0,1', placeholder: "1", min: "0", max: "100"
        %span km
      .Input__area__left__normal
        = f.label :image, "画像"
      .Input__area__left__image
        = f.file_field :image
    .Input__area__right
      .Input__area__right__normal
        = f.label :text, "内容(200字以内)"
      .Input__area__right__text
        = f.text_area :text, rows: "6", maxlength: "200", size: "30x10"
  .Input__button
    = f.submit "投稿・編集する", class: 'submit'

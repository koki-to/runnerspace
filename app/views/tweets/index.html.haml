= render partial: "header"
.Home
  .home
    .Content
      - @tweets.each do |tweet|
        .article
          .article__image
            - if tweet.image.present?
              = image_tag tweet.image.url
            - else
              = image_tag "article1"
          .article__title
            = link_to tweet.title, tweet_path(tweet.id)
          .article__info
            .article__info__icon
              = image_tag tweet.user.image.url
            .article__info__name
              = link_to tweet.user.name,"#"
            .article__info__star
              = link_to "#" do
                = icon 'fas', "star"
            .article__info__like
              = link_to "#" do
                = icon 'fas', "heart"